<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/RDP.ERROR" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'ddMMMyyyy'.log'" />
		<param name="threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{MMM dd, yyyy HH:mm:ss a} %c [METHOD: %M , LINE: %L]%n%-5p: %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{MMM dd, yyyy HH:mm:ss a} %c [METHOD: %M , LINE: %L]%n%-5p: %m%n" />
		</layout>
	</appender>

	<category name="com.rdpgroupbd.apps">
		<priority value="INFO" />
	</category>
	
	<category name="com.mchange.v2">
		<priority value="WARN" />
	</category>	

	<category name="org.hibernate">
		<priority value="WARN" />
	</category>

	<category name="javax.servlet">
		<priority value="WARN" />
	</category>

	<category name="org.springframework.beans">
		<priority value="WARN" />
	</category>
	
	<category name="org.springframework.orm">
		<priority value="WARN" />
	</category>
	
	<category name="org.springframework.web">
		<priority value="WARN" />
	</category>
	
	<category name="org.apache.struts2">
		<priority value="WARN" />
	</category>
	
	<category name="com.opensymphony.xwork2">
		<priority value="WARN" />
	</category>

	<root>
		<priority value="INFO" />
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>